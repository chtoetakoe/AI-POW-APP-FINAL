{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": ".",                     // ✅ allow tests/ and src/
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "jest"]           // ✅ explicitly include jest types
  },
  "include": ["src", "tests"],          // ✅ include both folders
  "exclude": ["node_modules", "dist"]
}
